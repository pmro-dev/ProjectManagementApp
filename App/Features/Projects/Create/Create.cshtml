@using App.Common.ViewModels
@using App.Features.Projects.Create.Models
@using static App.Common.ControllersConsts
@using static App.Common.Views.ViewsConsts
@model WrapperViewModel<ProjectCreateInputVM, ProjectCreateOutputVM>

@{
	Layout = SharedViews.DefaultLayout;

	var inputVM = Model.InputVM;
	var outputVM = Model.OutputVM;
	string tagsAsSingleText = string.Empty;
}

<h4>Create Project</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action=@ProjectCtrl.CreateAction method="post">
			<div class="form-group">

				<input asp-for="@inputVM.CreatorId" type="hidden" value="@outputVM.CreatorId" />

				<div class="form-group">
					<label asp-for="@inputVM.Title" class="control-label"></label>
					<input asp-for="@inputVM.Title" class="form-control"/>
					<span asp-validation-for="@inputVM.Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@inputVM.Description" class="control-label"></label>
					<input asp-for="@inputVM.Description" class="form-control" />
					<span asp-validation-for="@inputVM.Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@inputVM.Deadline" class="control-label">Deadline</label>
					<input asp-for="@inputVM.Deadline" asp-format="{0:dd'/'MM'/'yyyy}" type="datetime-local" class="form-control" />
					<span asp-validation-for="@inputVM.Deadline" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@inputVM.TagsAsSingleText" class="control-label"></label>
					<input asp-for="@inputVM.TagsAsSingleText" class="form-control" />
					<span asp-validation-for="@inputVM.TagsAsSingleText" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn" style="background-color: #671dff; color: white; font-weight: 500;" />
				<a asp-action=@BoardsCtrl.BrieflyAction asp-controller=@BoardsCtrl.Name class="btn btn-primary">Back</a>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync(SharedViews.ValidationPartial);
	}
}