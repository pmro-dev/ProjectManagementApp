@using App.Features.Projects.Delete.Models
@using static App.Common.ControllersConsts
@using static App.Common.Views.ViewsConsts
@model ProjectDeleteOutputVM

@{
	ViewData["Title"] = "Delete";
	Layout = SharedViews.DefaultLayout;
}

<div>
	<h4>Delete Project</h4>
	<h5>Are you sure you want to delete this?</h5>
	<hr />


	<h4>Details:</h4>

	<div class="form-group">
		<div class="form-group">
			<label asp-for="@Model.Title" class="control-label"></label>
			<input asp-for="@Model.Title" class="form-control" disabled />
		</div>
		<div class="form-group">
			<label asp-for="@Model.Description" class="control-label"></label>
			<input asp-for="@Model.Description" class="form-control" disabled />
		</div>
		<div class="form-group">
			<label asp-for="@Model.CreatorFullName" class="control-label"></label>
			<input asp-for="@Model.CreatorFullName" class="form-control" disabled />
		</div>
		<div class="form-group">
			<label asp-for="@Model.OwnerFullName" class="control-label"></label>
			<input asp-for="@Model.OwnerFullName" class="form-control" disabled />
		</div>
		<div class="form-group">
			<label asp-for="@Model.Created" class="control-label"></label>
			<input asp-for="@Model.Created" class="form-control" type="datetime-local" disabled />
		</div>

		@{
			<h4>Clients:</h4>

			foreach (var client in Model.ClientsNames)
			{
				<div class="form-group">
					<label asp-for="@client" class="control-label"></label>
					<input asp-for="@client" class="form-control" disabled />
				</div>
			}
		}
	</div>

	<form asp-action=@ProjectCtrl.DeletePostAction method="post">
		<input type="hidden" asp-for="@Model.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action=@BoardsCtrl.BrieflyAction asp-controller=@BoardsCtrl.Name class="btn btn-primary">Back</a>
	</form>
</div>
